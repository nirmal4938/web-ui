{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "src",

    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@layouts/*": ["layouts/*"],
      "@context/*": ["context/*"],
      "@types/*": ["types/*"],
      "@theme/*": ["theme/*"]
    },

    // ðŸ‘‡ This ensures styled-components theme augmentation is loaded globally
    "types": ["styled-components"]
  },

  // ðŸ‘‡ Ensure TS picks up your custom declarations
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/theme/styled.d.ts"],
  "exclude": ["node_modules", "dist"]
}
